<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.doremi.re.ApplyClassActivity" >

   <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="#b3d8e8"
        android:orientation="horizontal" >

        <TableLayout
            android:id="@+id/Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="1" >

            <TableRow>

                <TextView
                    android:gravity="right"
                    android:padding="5dip"
                    android:text="姓名:"
                    android:textColor="#000000"
                    android:textStyle="bold" />
                
                <EditText 
                        android:id="@+id/apply_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="请输入您的姓名"
                        android:layout_weight="1"/>
                
            </TableRow>

            <TableRow>

                <TextView
                    android:gravity="right"
                    android:padding="5dip"
                    android:text="联系电话:"
                    android:textColor="#000000"
                    android:textStyle="bold" />
                <EditText 
                        android:id="@+id/phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请输入11位手机号码"/>
               
            </TableRow>

            <TableRow>

                <TextView
                    android:gravity="right"
                    android:padding="5dip"
                    android:text="年龄:"
                    android:textColor="#000000"
                    android:textStyle="bold" />
                
                <EditText 
                        android:id="@+id/age"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请输入您的年龄"/>
                
               
            </TableRow>
        </TableLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:background="#b3d8e8"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:text="选择性别："
            android:textColor="#000000"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/sexApply1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rbMale"
                android:checked="true"
                android:text="男"
                android:textColor="#000000"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbfaMale"
                android:text="女"
                android:textColor="#000000"
                android:textStyle="bold" />
        </RadioGroup>
    </LinearLayout>
   
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#b3d8e8"
            android:stretchColumns="1" >

            
            <TableRow>

                <TextView
                    android:gravity="right"
                    android:padding="5dip"
                    android:text="时间段:"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/sarMor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周六上午" />

                    <CheckBox
                        android:id="@+id/sarNoon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周六下午" />

                    <CheckBox
                        android:id="@+id/sunMor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周日上午" />
                    
                    <CheckBox
                        android:id="@+id/sunNoon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周日下午" />
                   

                </LinearLayout>
            
            
            </TableRow>
            
              <TableRow>
                <TextView
                    android:gravity="right"
                    android:padding="5dip"
                    android:text="其它时间:"
                    android:textColor="#000000"
                    android:textStyle="bold" />
                
                <EditText 
                        android:id="@+id/elsetime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请输入其他的上课时间"/>
                
               
            </TableRow>

            
            <TableRow>

                <TextView
                    android:gravity="right"
                    android:padding="5dip"
                    android:text="课程选择:"
                    android:textColor="#000000"
                    android:textStyle="bold" />

               <RadioGroup
            android:id="@+id/select"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/low"
                android:checked="true"
                android:text="初级"
                android:textColor="#000000"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/middle"
                android:text="中级"
                android:textColor="#000000"
                android:textStyle="bold" />
        </RadioGroup>
            </TableRow>
             
             <TableRow>

                <TextView
                    android:gravity="right"
                    android:padding="5dip"
                    android:text="班级规模:"
                    android:textColor="#000000"
                    android:textStyle="bold" />

               <RadioGroup
            android:id="@+id/clas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/small"
                android:checked="true"
                android:text="小班"
                android:textColor="#000000"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/big"
                android:text="大班"
                android:textColor="#000000"
                android:textStyle="bold" />
        </RadioGroup>
            </TableRow>
        </TableLayout>
    </LinearLayout>

     <Button
         android:id="@+id/sure"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/linearLayout1"
         android:layout_alignRight="@+id/linearLayout1"
         android:layout_below="@+id/linearLayout1"
         android:layout_marginTop="39dp"
         android:background="#b3d8e8"
         android:text="报班" />

</RelativeLayout>
